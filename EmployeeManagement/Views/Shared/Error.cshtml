@if (ViewBag.Title == null)
{
    <h3 class="alert alert-info mt-2 mb-2">An error occured while processing your request. The support team is notified and we are working on the fix.</h3>
    <h5 class="alert alert-info">Please contact us on abstergo@abstergo.com</h5>
}
else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
}


