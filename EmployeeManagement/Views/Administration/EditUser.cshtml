@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

    <form method="post" class="mt-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <span class="fas fa-id-card text-success"></span>
                </div>
            </div>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <span class="fas fa-at text-primary"></span>
                </div>
            </div>
            <input asp-for="Email" class="form-control" placeholder="Email" />
        </div>
        <div class="input-group mb-1">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <span class="fas fa-user text-info"></span>
                </div>
            </div>
            <input asp-for="UserName" class="form-control" placeholder="User Name" />
        </div>
        <div class="input-group mb-1">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <span class="fas fa-city text-primary"></span>
                </div>
            </div>
            <input asp-for="City" class="form-control" placeholder="City" />
        </div>
       
        <div>
            <button type="submit" class="btn btn-outline-success btn-block form-control">
                <i class="far fa-plus-square"></i>&nbsp;Update
            </button>
            <a asp-action="ListUsers" class="btn btn-primary btn-block mb-2">
                <i class="fas fa-ban"></i>&nbsp;Cancel
            </a>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
            <div class="card-footer">
                <a href="#" style="width: auto" class="btn btn-primary">
                    Manage Roles
                </a>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h3>User Claims</h3>
            </div>
            <div class="card-body">
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <h5 class="card-title">@claim</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
            <div class="card-footer">
                <a href="#" style="width: auto" class="btn btn-primary">
                    Manage Claims
                </a>
            </div>
        </div>
    </form>